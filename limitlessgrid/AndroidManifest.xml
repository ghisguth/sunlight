<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:glEsVersion="0x00020000" />
    <uses-feature android:name="android.software.live_wallpaper" />

    <application
        android:theme="@style/Theme.AppCompat.DayNight"
        android:icon="@drawable/thumbnail"
        android:label="@string/app_name">
        <service
            android:name="com.ghisguth.limitlessgrid.Wallpaper"
            android:label="@string/wallpaper_grid"
            android:permission="android.permission.BIND_WALLPAPER"
            android:directBootAware="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/main" />
        </service>
        <activity
            android:name="com.ghisguth.limitlessgrid.WallpaperSettings"
            android:exported="true"
            android:label="@string/wallpaper_settings"></activity>
        <activity
            android:name="com.ghisguth.limitlessgrid.LauncherActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
